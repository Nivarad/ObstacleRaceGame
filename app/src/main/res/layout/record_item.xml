<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:layout_margin="4dp"
    android:elevation="8dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/blue_black">

    <RelativeLayout
        android:id="@+id/record_LAYOUT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/record_IMG_cup"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_alignBottom="@id/record_LBL_points"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="20dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/astronaut" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/record_LBL_title"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/record_IMG_cup"
            android:maxLines="2"
            android:minLines="2"
            android:text="SCORE"
            android:textColor="@color/antiqueWhite"
            android:textSize="24sp"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/record_LBL_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/record_LBL_title"
            android:layout_alignStart="@id/record_LBL_title"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:minLines="1"
            android:text="000"
            android:textSize="25sp"
            android:textColor="@color/antiqueWhite" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>